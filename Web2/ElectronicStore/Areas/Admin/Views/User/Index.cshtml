
@{
    ViewBag.Title = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="/Assets/Admin/js/bootbox.min.js"></script>
    <script src="/Assets/Admin/js/mustache.min.js"></script>
    <script src="/Assets/Admin/js/jquery.twbsPagination.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="/Assets/Admin/js/adminUser.js"></script>
}

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-5">
                    <input type="text" class="form-control" id="txtNameS" placeholder="Type name" />
                </div>
                <div class="col-md-2">
                    <select class="form-control" id="ddlStatusS">
                        <option value="User">User</option>
                        <option value="Manager">Manager</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
                <div class="col-md-5">
                    <button class="btn btn-outline btn-primary" id="btnSearch">Search</button>
                    <button class="btn btn-outline btn-default" id="btnReset">Reset</button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered table-hover table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tblData"></tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="pagination" class="pagination"></div>
                    <script id="data-template" type="x-tmpl-mustache">
                        <tr>
                            <td>{{Email}}</td>
                            <td>{{FirstName}}</td>
                            <td>{{LastName}}</td>
                            <td>{{Address}}</td>
                            <td>{{{Phone}}}</td>
                            <td>
                                <button class="btn btn-primary btn-edit" data-id="{{Id}}">Edit</button>
                                <button class="btn btn-danger btn-delete" data-id="{{Id}}">Delete</button>
                            </td>
                        </tr>
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalAddUpdate" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update User</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="frmSaveData">
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input type="text" class="form-control" name="firstName" id="firstName">
                        <input type="hidden" id="hidID" value="0" />
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name:</label>
                        <input type="text" class="form-control" name="lastName" id="lastName">
                    </div>
                    <div class="form-group">
                        <label for="address">Address:</label>
                        <input type="text" class="form-control" name="address" id="address">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <input type="tel" class="form-control" name="phone" id="phone">
                    </div>
                    <div class="form-group">
                        <label for="role">Role:</label>
                        <select class="form-control" id="roles"></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>